<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    tools:context="com.jic.marketonlinev2.View.MainScreen.Fragment.CreateStoreFragment"
    android:background="@color/colorDivider"
    android:weightSum="1">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="137dp"
        app:srcCompat="@drawable/shopdorm"
        android:id="@+id/imageView5" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Store's Name"
                android:layout_width="153dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:textSize="15dp"
                android:background="@color/colorDivider" />

            <EditText
                android:inputType="textMultiLine"
                android:maxLength="50"
                android:ems="10"
                android:hint="Enter your Store's Name"
                android:paddingLeft="6dp"
                android:id="@+id/etStoreName"
                android:layout_width="350dp"
                android:textSize="15dp"
                android:background="@drawable/focus_color"
                android:layout_marginBottom="15dp"
                android:layout_height="31dp" />

            <TextView
                android:text="Describe"
                android:layout_width="153dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:textSize="15dp"
                android:background="@color/colorDivider" />

            <EditText
                android:layout_width="350dp"
                android:inputType="textMultiLine"
                android:hint="Enter your Describe"
                android:ems="10"
                android:paddingLeft="6dp"
                android:maxLength="300"
                android:textSize="15dp"
                android:id="@+id/etStoreDes"
                android:layout_marginBottom="15dp"
                android:background="@drawable/focus_color"
                android:layout_height="100dp"
                android:layout_weight="0.40" />

            <TextView
                android:text="Locale"
                android:layout_width="153dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:textSize="15dp"
                android:background="@color/colorDivider" />

            <Spinner
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/spnAddress"
                android:background="@android:drawable/editbox_background"
                android:layout_marginBottom="10dp" />

            <TableLayout
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@color/colorWhite"
                android:layout_marginBottom="10dp">

                <TableRow
                    android:layout_width="match_parent"

                    android:layout_height="match_parent" >

                    <Button
                        android:text="Time Open"
                        android:layout_width="wrap_content"
                        android:id="@+id/btnTimeOpen"
                        android:layout_height="40dp"
                        style="@style/Widget.AppCompat.Button.Colored" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:gravity="center_horizontal"
                        android:id="@+id/tvTimeOpen"
                        android:textSize="20dp"
                        android:layout_marginLeft="50dp"
                        android:layout_height="25dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <Button
                        android:text="Time Close"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:id="@+id/btnTimeClose"
                        style="@style/Widget.AppCompat.Button.Colored" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:id="@+id/tvTimeClose"
                        android:gravity="center_horizontal"
                        android:textSize="20dp"
                        android:layout_marginLeft="50dp"
                        android:layout_height="25dp" />
                </TableRow>
            </TableLayout>

            <Button
                android:text="Create"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnCreateShop"
                style="@style/Widget.AppCompat.Button.Colored"
                android:elevation="0dp"
                android:layout_weight="0.07" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
