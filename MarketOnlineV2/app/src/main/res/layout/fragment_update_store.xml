<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    tools:context="com.jic.marketonlinev2.View.MainScreen.Fragment.UpdateStoreFragment"
    android:background="@color/colorDivider"
    android:weightSum="1">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="138dp"
        app:srcCompat="@drawable/shopdorm"
        android:id="@+id/imageView8" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:text="Store's Name"
                android:layout_width="153dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:textSize="15dp"
                android:background="@color/colorDivider" />

            <EditText
                android:inputType="textMultiLine"
                android:maxLength="50"
                android:ems="10"
                android:hint="Enter your Store's Name"
                android:paddingLeft="6dp"
                android:id="@+id/etUpdateStoreName"
                android:layout_width="350dp"
                android:textSize="15dp"
                android:background="@drawable/focus_color"
                android:layout_marginBottom="15dp"
                android:layout_height="31dp" />

            <TextView
                android:text="Describe"
                android:layout_width="153dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:textSize="15dp"
                android:background="@color/colorDivider" />

            <EditText
                android:layout_width="350dp"
                android:inputType="textMultiLine"
                android:hint="Enter your Describe"
                android:ems="10"
                android:paddingLeft="6dp"
                android:maxLength="300"
                android:textSize="15dp"
                android:id="@+id/etUpdateStoreDes"
                android:layout_marginBottom="15dp"
                android:background="@drawable/focus_color"
                android:layout_height="100dp"
                android:layout_weight="3.38" />

            <TextView
                android:text="Locale"
                android:layout_width="153dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:textSize="15dp"
                android:background="@color/colorDivider" />

            <Spinner
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/spnUpdateAddress"
                android:layout_marginBottom="10dp"
                android:background="@android:drawable/editbox_background" />

            <TableLayout
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@color/colorWhite"
                android:layout_marginBottom="10dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <Button
                        android:text="Time Open"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:id="@+id/btnUpdateOpen"
                        style="@style/Widget.AppCompat.Button.Colored" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:gravity="center_horizontal"
                        android:id="@+id/tvUpdateTimeOpen"
                        android:textSize="20dp"
                        android:layout_marginLeft="50dp"
                        android:layout_height="25dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <Button
                        android:text="Time Close"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:id="@+id/btnUpdateClose"
                        style="@style/Widget.AppCompat.Button.Colored" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tvUpdateTimeClose"
                        android:gravity="center_horizontal"
                        android:textSize="20dp"
                        android:layout_marginLeft="50dp"
                        android:layout_height="25dp" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:text="Back"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnBackUpdateStore"
                    android:layout_marginRight="30dp"
                    android:onClick="timeOpen"
                    android:layout_marginLeft="10dp"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_weight="0.02" />

                <Button
                    android:text="Update"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnUpdateStore"
                    style="@style/Base.Widget.AppCompat.Button.Colored"
                    android:elevation="0dp"
                    android:layout_weight="0.02"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="110dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
