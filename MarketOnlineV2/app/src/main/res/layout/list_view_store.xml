<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    android:background="@color/colorDivider"
    android:theme="@style/Base.ThemeOverlay.AppCompat.Dialog.Alert"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:weightSum="1"
        android:layout_marginBottom="10dp"
        android:elevation="15dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageStore"
                android:layout_width="60dp"
                android:src="@mipmap/ic_launcher"
                app:border_color="#FF000000"
                android:layout_marginRight="20dp"
                android:layout_height="60dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Hoa Ban Food"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvShowStoreName"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold" />

                <TextView
                    android:text="lam ngoc khanh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/tvShowStoreUserName"
                    android:textSize="12sp" />

                <TextView
                    android:text="Ha Noi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvShowStoreLocale"
                    android:layout_marginBottom="5dp" />

                <RatingBar
                    android:layout_height="wrap_content"
                    android:id="@+id/showRatingBar"
                    android:layout_width="wrap_content"
                    android:numStars="5"
                    android:rating="1"
                    android:stepSize="0.5"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:background="@color/colorWhite"
                    android:layout_marginBottom="5dp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:id="@+id/textView7"
            android:background="@color/common_google_signin_btn_text_light_default" />

        <TextView
            android:text="07 : 00 - 20 : 30"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:id="@+id/tvShowStoreTime" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:id="@+id/textView11"
            android:background="@color/common_google_signin_btn_text_light_default"
            android:layout_marginBottom="5dp" />

        <TextView
            android:text="Describe write here"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tvShowStoreDes" />

    </LinearLayout>

</LinearLayout>
