<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/colorDivider"
    tools:context="com.jic.marketonlinev2.View.MainScreen.Fragment.ViewOderBuyerFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:id="@+id/imageView5"
        app:srcCompat="@drawable/shopdorm" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:id="@+id/lvViewStoreOrder"
        android:layout_marginBottom="10dp" />

    <TextView
        android:text="Addess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_marginLeft="5dp" />

    <EditText
        android:layout_height="86dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/etBuyerAddress"
        android:maxLength="100"
        android:layout_width="365dp"
        android:background="@android:drawable/editbox_background" />

    <TextView
        android:text="Message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:layout_marginLeft="5dp" />

    <EditText
        android:layout_width="365dp"
        android:layout_height="122dp"
        android:inputType="textMultiLine"
        android:maxLength="300"
        android:ems="10"
        android:id="@+id/etBuyerMessage"
        android:background="@android:drawable/editbox_background" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBackViewOrder"
            android:layout_weight="0.06"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            style="@style/Widget.AppCompat.Button.Colored" />

        <Button
            android:text="Send Order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSendOrder"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.07"
            style="@style/Widget.AppCompat.Button.Colored" />
    </LinearLayout>


</LinearLayout>
